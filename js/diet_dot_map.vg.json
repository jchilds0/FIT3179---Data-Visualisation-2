{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "Dot plot of Adelie Penguin diet",
    "width": 700,
    "height": 500,
    "signals": [
      {"name": "columns", "value": 30, "update": "floor(width / (length + pad))"},
      {"name": "length", "value": 10},
      {"name": "pad", "value": 5},
      {"name": "zoom", "value": 1},
      {"name": "offset", "value": 15}
    ],
    "data": [
      {
        "name": "fish",
        "url": "data/adelie_diet.csv",
        "format": {"type": "csv", "parse": "auto", "delimiter": ","},
        "transform": [
          {
            "type": "filter",
            "expr": "datum.species != 'E. Superba' && datum.species != 'T. Macrura'"
          },
          {
            "type": "formula",
            "expr": "round(datum.count / zoom)",
            "as": "count_zoom"
          },
          {
            "type": "formula",
            "expr": "floor(datum.count_zoom / columns)",
            "as": "rows"
          },
          {
            "type": "formula",
            "expr": "datum.count_zoom - datum.rows * columns",
            "as": "extra"
          },
          {
            "type": "formula",
            "expr": "(datum.rows + ceil(datum.extra / columns)) * (length + pad) - pad + offset",
            "as": "cellHeight"
          },
          {
            "type": "stack",
            "field": "cellHeight",
            "sort": {"field": "count", "order": "descending"}
          }
        ]
      }
    ],
    "marks": [
      {
        "type": "group",
        "from": {"data": "fish"},
        "encode": {
          "enter": {
            "y": {"field": "y0", "offset": {"signal": "offset"}},
            "height": {"field": "cellHeight"},
            "width": {"signal": "width"}
          }
        },
        "signals": [
          {"name": "species", "value": "Fish", "update": "parent.species"}
        ],
        "data": [
          {
            "name": "x_seq",
            "transform": [
              {
                "type": "sequence",
                "start": 0,
                "stop": {"signal": "columns * (length + pad)"},
                "step": {"signal": "length + pad"}
              }
            ]
          },
          {
            "name": "y_seq",
            "transform": [
              {
                "type": "sequence",
                "start": 0,
                "stop": {"signal": "parent.rows * (length + pad)"},
                "step": {"signal": "length + pad"}
              }
            ]
          },
          {
            "name": "extra_seq",
            "transform": [
              {
                "type": "sequence",
                "start": 0,
                "stop": {"signal": "parent.extra * (length + pad)"},
                "step": {"signal": "length + pad"}
              }
            ]
          }
        ],
        "scales": [
          {
            "name": "yscale",
            "type": "point",
            "range": [0, {"signal": "parent.cellHeight"}],
            "padding": 5,
            "round": true,
            "domain": [{"signal": "parent.species"}]
          },
          {
            "name": "color",
            "type": "ordinal",
            "range": {"scheme": "pastel1"},
            "domain": {"data": "fish", "field": "species"}
          }
        ],
        "axes": [
          {
            "orient": "left",
            "scale": "yscale",
            "tickSize": 0,
            "domain": false,
            "grid": false,
            "labelAlign": "left",
            "offset": 50,
            "labelOffset": -9
          }
        ],
        "marks": [
          {
            "type": "group",
            "from": {
              "facet": {"name": "y_val", "data": "y_seq", "groupby": "data"}
            },
            "marks": [
              {
                "type": "rect",
                "from": {"data": "x_seq"},
                "encode": {
                  "enter": {
                    "x": {"field": "data"},
                    "y": {"field": {"parent": "data"}},
                    "width": {"signal": "length"},
                    "height": {"signal": "length"},
                    "cornerRadius": {"value": 2},
                    "fill": {"scale": "color", "signal": "species"}
                  }
                }
              }
            ]
          },
          {
            "type": "rect",
            "from": {"data": "extra_seq"},
            "encode": {
              "enter": {
                "x": {"field": "data"},
                "y": {"signal": "parent.rows * (length + pad)"},
                "width": {"signal": "length"},
                "height": {"signal": "length"},
                "cornerRadius": {"value": 2},
                "fill": {"scale": "color", "field": {"parent": "species"}}
              }
            },
            "tooltip": {"signal": "datum.data"}
          }
        ]
      }
    ]
  }