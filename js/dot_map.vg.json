{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 800,
    "projection": {
      "type": "azimuthalEqualArea",
      "rotate": [55, 65, 0],
      "scale": 3000
      },
    "layer": [
      {
        "data": {
          "url": "maps_prep/ne_10m_admin_0_countries_2.json",
          "format": {
            "type": "topojson", 
            "feature": "ne_10m_admin_0_countries"
        }
        },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "properties.NAME",
                    "type": "nominal"
                }
            }
        },
        {
            "data": {
                "url": "data/copa_adpe_ncei.csv"
            },
            "mark": {
                "type": "point",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                }
            }
        }
    ]
}