{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "An interactive world map supporting pan and zoom.",
  "width": 1000,
  "height": 800,
  "autosize": "none",
  "signals": [
    {"name": "tx", "update": "width / 2"},
    {"name": "ty", "update": "height / 2"},
    {
      "name": "scale",
      "value": 4500,
      "on": [
        {
          "events": {"type": "wheel", "consume": true},
          "update": "clamp(scale * pow(1.002, -event.deltaY * pow(16, event.deltaMode)), 3000, 2000000)"
        }
      ]
    },
    {
      "name": "angles",
      "value": [0, 0],
      "on": [{"events": "mousedown", "update": "[centerX, centerY]"}]
    },
    {
      "name": "cloned",
      "value": null,
      "on": [{"events": "mousedown", "update": "copy('projection')"}]
    },
    {
      "name": "start",
      "value": null,
      "on": [{"events": "mousedown", "update": "invert(cloned, xy())"}]
    },
    {
      "name": "drag",
      "value": null,
      "on": [
        {
          "events": "[mousedown, window:mouseup] > window:mousemove",
          "update": "invert(cloned, xy())"
        }
      ]
    },
    {
      "name": "delta",
      "value": null,
      "on": [
        {
          "events": {"signal": "drag"},
          "update": "[start[0] - drag[0], start[1] - drag[1]]"
        }
      ]
    },
    {
      "name": "centerX",
      "value": -2,
      "on": [
        {
          "events": {"signal": "delta"},
          "update": "clamp((angles[0] + delta[0]/2), -7, 3)"
        }
      ]
    },
    {
      "name": "centerY",
      "value": 24,
      "on": [
        {
          "events": {"signal": "delta"},
          "update": "clamp((angles[1] + delta[1]/2), 19, 29)"
        }
      ]
    },
    {
        "name": "year",
        "value": 2013,
        "bind": {
          "input": "range",
          "min": 1996,
          "max": 2013,
          "step": 1
        }
    },
    {
        "name": "sex",
        "value": "female",
        "bind": {
          "input": "select",
          "options": ["male", "female"]
        }
    },
    {
        "name": "stage",
        "value": "incubation",
        "bind": {
          "input": "select",
          "options": [
            "incubation",
            "creche",
            "brood-guard",
            "winter"
          ]
        }
    }
  ],
  "scales": [
    {
      "name": "density",
      "type": "linear",
      "zero": true,
      "domain": [0, 1],
      "range": {"scheme": "viridis"}
    },
    {
      "name": "color",
      "type": "linear",
      "domain": [-1, 1],
      "range": {"scheme": "spectral"}
    }
  ],
  "data": [
    {
      "name": "ocean",
      "url": "maps_prep/ne_10m_ocean_ice_glaciated.json",
      "format": {"type": "topojson", "feature": "ne_10m_ocean"}
    },
    {
      "name": "ice",
      "url": "maps_prep/ne_10m_ocean_ice_glaciated.json",
      "format": {
        "type": "topojson",
        "feature": "ne_10m_antarctic_ice_shelves_polys"
      }
    },
    {
      "name": "glaciated",
      "url": "maps_prep/ne_10m_ocean_ice_glaciated.json",
      "format": {"type": "topojson", "feature": "ne_10m_glaciated_areas"}
    },
    {
      "name": "penguins",
      "url": "data/adelie_penguin_telemetry.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "geojson",
          "fields": ["Longitude", "Latitude"],
          "signal": "penguins_geojson_0"
        },
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["Longitude", "Latitude"],
          "as": ["penguins_x", "penguins_y"]
        },
        {
            "type": "filter",
            "expr": "datum.Year == year"
        },
        {
            "type": "filter",
            "expr": "datum.Sex == sex"
        },
        {
            "type": "filter",
            "expr": "datum.BreedStage == stage"
        }
      ]
    },
    {
      "name": "density",
      "source": "penguins",
      "transform": [
        {
          "type": "kde2d",
          "size": [{"signal": "width"}, {"signal": "height"}],
          "bandwidth": [10, 10],
          "x": "penguins_x",
          "y": "penguins_y"
        },
        {
          "type": "heatmap",
          "field": "grid",
          "color": {"expr": "scale('density', datum.$value / datum.$max)"},
          "opacity": {"expr": "3*datum.$value / datum.$max"}
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": "albers",
      "scale": {"signal": "scale"},
      "rotate": [50, 90, 0],
      "center": [{"signal": "centerX"}, {"signal": "centerY"}],
      "translate": [{"signal": "tx"}, {"signal": "ty"}],
      "extent": [[-70, -70], [-40, -60]]
    }
  ],
  "marks": [
    {
      "type": "shape",
      "from": {"data": "ocean"},
      "encode": {"update": {"fill": {"value": "#b3cde3"}}},
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "type": "shape",
      "from": {"data": "ice"},
      "encode": {"update": {"fill": {"value": "white"}}},
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "type": "shape",
      "from": {"data": "glaciated"},
      "encode": {"update": {"fill": {"value": "lightgray"}}},
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "type": "image",
      "from": {"data": "density"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "y": {"value": 0},
          "image": {"field": "image"},
          "width": {"signal": "width"},
          "height": {"signal": "height"},
          "aspect": {"value": false},
          "smooth": {"value": true}
        }
      }
    }
  ]
}