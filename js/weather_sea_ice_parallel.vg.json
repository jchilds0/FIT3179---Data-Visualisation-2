{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Sea ice parallel coordinates chart",
  "width": 600,
  "height": 600,
  "signals": [
    {
      "name": "year",
      "value": 2015,
      "bind": {
        "name": "Year",
        "input": "range",
        "min": 1992,
        "max": 2019,
        "step": 1
      }
    }
  ],
  "data": [
    {
      "name": "ice",
      "url": "data/palmer/palmer_station_weather_ice.csv",
      "format": {"type": "csv", "time": "date", "delimiter": ","},
      "transform": [
        {
          "type": "formula",
          "expr": "utcParse(datum.time, '%d/%m/%Y')",
          "as": "date"
        },
        {
          "type": "fold",
          "fields": [
            "ice_formation_id",
            "ice_age_id",
            "land_ice_type_id",
            "ice_edge_id",
            "ice_cond_trnd"
          ],
          "as": ["ice_id", "value"]
        },
        {"type": "filter", "expr": "datum.sea_ice != ''"},
        {"type": "filter", "expr": "year(datum.date) == year"}
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "point",
      "domain": [
        "ice_formation_id",
        "ice_age_id",
        "land_ice_type_id",
        "ice_edge_id",
        "ice_cond_trnd"
      ],
      "range": "width"
    },
    {
      "name": "yscale",
      "type": "point",
      "domain": ["9", "8", "7", "6", "5", "4", "3", "2", "1", "0", "/"],
      "range": "height"
    },
    {
      "name": "xlabels",
      "type": "ordinal",
      "range": [
        "Ice Formation Id",
        "Ice Age Id",
        "Land Ice Type Id",
        "Ice Edge Id",
        "Ice Condition Trend"
      ],
      "domain": [
        "ice_formation_id",
        "ice_age_id",
        "land_ice_type_id",
        "ice_edge_id",
        "ice_cond_trnd"
      ]
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "domain": false,
      "ticks": false,
      "offset": 25,
      "encode": {"labels": {"update": {"text": {"scale": "xlabels", "signal": "datum.label"}}}}
    },
    {"orient": "left", "scale": "yscale", "offset": 30, "title": "WMO Meterological Code"}
  ],
  "marks": [
    {
      "type": "group",
      "from": {"facet": {"name": "ices", "data": "ice", "groupby": "date"}},
      "encode": {"enter": {"tooltip": {"field": "date"}}},
      "marks": [
        {
          "type": "line",
          "from": {"data": "ices"},
          "encode": {
            "update": {
              "x": {"scale": "xscale", "field": "ice_id"},
              "y": {"scale": "yscale", "field": "value"},
              "interpolate": {"value": "cardinal"},
              "tension": {"value": 0.2},
              "strokeWidth": {"value": 1.01},
              "strokeOpacity": {"value": 0.3}
            }
          }
        }
      ]
    }
  ]
}