{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "Dot plot of Adelie Penguin diet",
    "width": 50,
    "height": 15,
    "signals": [
      {"name": "pad", "value": 5},
      {"name": "zoom", "value": 500}
    ],
    "title": "Count",
  
    "data": [
      {
        "name": "sizes",
        "values": [
          {"name": 500, "length": 15, "x": 0, "y": 500}
        ]
      }
    ],
    "scales": [
      {"name": "y", "domain": {"data": "sizes", "field": "y"}, "range": "height"}
    ],
    "axes": [
      {
        "orient": "left",
        "scale": "y",
        "values": [500],
        "labelFontSize": 14,
        "labelOffset": 7.5,
        "ticks": false,
        "domain": false,
        "offset": 50
      }
    ],
    "marks": [
      {
        "type": "rect",
        "from": {"data": "sizes"},
        "encode": {
          "enter": {
            "x": {"field": "x"},
            "y": {"scale": "y", "field": "y"},
            "width": {"field": "length"},
            "height": {"field": "length"},
            "cornerRadius": {"value": 2},
            "fill": {"value": "#ccc"}
          }
        }
      }
    ]
  }